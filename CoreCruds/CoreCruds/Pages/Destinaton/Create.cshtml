@page
@model CoreCruds.Pages.Destinaton.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Destinations</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Destinations.DestinationName" class="control-label"></label>
                <input asp-for="Destinations.DestinationName" class="form-control" />
                <span asp-validation-for="Destinations.DestinationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinations.Altitude" class="control-label"></label>
                <input asp-for="Destinations.Altitude" class="form-control" />
                <span asp-validation-for="Destinations.Altitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinations.CostOfTrip" class="control-label"></label>
                <input asp-for="Destinations.CostOfTrip" class="form-control" />
                <span asp-validation-for="Destinations.CostOfTrip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinations.MainAttraction" class="control-label"></label>
                <input asp-for="Destinations.MainAttraction" class="form-control" />
                <span asp-validation-for="Destinations.MainAttraction" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Destinations.EquatorialWeather" /> @Html.DisplayNameFor(model => model.Destinations.EquatorialWeather))
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Destinations.DateOfVisit" class="control-label"></label>
                <input asp-for="Destinations.DateOfVisit" class="form-control" />
                <span asp-validation-for="Destinations.DateOfVisit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destinations.LocationId" class="control-label"></label>
                <select asp-for="Destinations.LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
