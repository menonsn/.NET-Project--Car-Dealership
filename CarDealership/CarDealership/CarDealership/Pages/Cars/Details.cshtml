@page
@model CarDealership.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Make.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.VIN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.VIN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Manufactured_Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Manufactured_Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Showroom_Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Showroom_Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Sale_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Sale_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Owner.Customer_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Branch)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Branch.Branch_Name)
        </dd>
    </dl>
</div>
