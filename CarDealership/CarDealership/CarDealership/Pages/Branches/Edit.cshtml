@page
@model CarDealership.Pages.Branches.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Branch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Branch.ID" />
            <div class="form-group">
                <label asp-for="Branch.Branch_City" class="control-label"></label>
                <input asp-for="Branch.Branch_City" class="form-control" />
                <span asp-validation-for="Branch.Branch_City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Branch.Zip_Code" class="control-label"></label>
                <input asp-for="Branch.Zip_Code" class="form-control" />
                <span asp-validation-for="Branch.Zip_Code" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Branch.IsOperational" /> @Html.DisplayNameFor(model => model.Branch.IsOperational)
                </label>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
