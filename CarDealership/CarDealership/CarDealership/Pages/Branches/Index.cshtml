@page
@model CarDealership.Pages.Branches.IndexModel

@{
    ViewData["Title"] = "Our Branches";
}

    <h1 style="color:black;">Our Branches</h1>

<p>
    <a asp-page="Create">Create a New Branch</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Branch_City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Zip_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].IsOperational)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Average_Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch[0].Review_Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Branch) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Branch_City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOperational)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Average_Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review_Count)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
