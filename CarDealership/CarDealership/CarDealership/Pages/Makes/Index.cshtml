@page
@model CarDealership.Pages.Makes.IndexModel

@{
    ViewData["Title"] = "Makes";
}

    <h1 style="color:black;">Makes</h1>

    <p>
        <a asp-page="Create">Create New Makes</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make[0].MakeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make[0].Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Make) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MakeType.Make_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
